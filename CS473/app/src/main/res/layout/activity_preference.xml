<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchActivity">

    <TextView
        android:id="@+id/select_pref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Choose the topic to talk!"
        android:layout_margin="50sp"
        android:layout_centerHorizontal="true"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_daily"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="Daily life"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_money"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="Money"
        android:textSize="20sp"
        android:layout_below="@id/btn_daily"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_job"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="Job"
        android:textSize="20sp"
        android:layout_below="@id/btn_money"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_sport"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="Sports"
        android:textSize="20sp"
        android:layout_below="@id/btn_job"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_study"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="Study"
        android:textSize="20sp"
        android:layout_below="@id/btn_sport"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_travel"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="Travel"
        android:textSize="20sp"
        android:layout_below="@id/btn_study"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back" />

</RelativeLayout>